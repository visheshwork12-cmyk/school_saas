{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRTokenAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ECRRepositoryReadAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage",
        "ecr:DescribeRepositories",
        "ecr:DescribeImages",
        "ecr:ListImages",
        "ecr:DescribeImageScanFindings",
        "ecr:GetRepositoryPolicy"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ]
    },
    {
      "Sid": "ECRRepositoryWriteAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:BatchDeleteImage"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"]
        }
      }
    },
    {
      "Sid": "ECRRepositoryManagement",
      "Effect": "Allow",
      "Action": [
        "ecr:CreateRepository",
        "ecr:DeleteRepository",
        "ecr:SetRepositoryPolicy",
        "ecr:DeleteRepositoryPolicy",
        "ecr:TagResource",
        "ecr:UntagResource",
        "ecr:ListTagsForResource"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ],
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"],
          "ecr:ResourceTag/Project": "school-erp"
        }
      }
    },
    {
      "Sid": "ECRLifecyclePolicyAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:PutLifecyclePolicy",
        "ecr:GetLifecyclePolicy",
        "ecr:DeleteLifecyclePolicy",
        "ecr:GetLifecyclePolicyPreview",
        "ecr:StartLifecyclePolicyPreview"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ]
    },
    {
      "Sid": "ECRScanningAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:StartImageScan",
        "ecr:DescribeImageScanFindings",
        "ecr:GetRegistryScanningConfiguration",
        "ecr:PutRegistryScanningConfiguration"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ]
    },
    {
      "Sid": "ECRReplicationAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:CreatePullThroughCacheRule",
        "ecr:DeletePullThroughCacheRule",
        "ecr:DescribePullThroughCacheRules",
        "ecr:GetRegistryPolicy",
        "ecr:PutRegistryPolicy",
        "ecr:DeleteRegistryPolicy"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": ["us-east-1", "us-west-2"]
        }
      }
    },
    {
      "Sid": "ECRCrossAccountAccess",
      "Effect": "Allow",
      "Action": [
        "ecr:BatchCheckLayerAvailability",
        "ecr:GetDownloadUrlForLayer",
        "ecr:BatchGetImage"
      ],
      "Resource": [
        "arn:aws:ecr:*:*:repository/school-erp-*"
      ],
      "Condition": {
        "StringEquals": {
          "ecr:ResourceTag/Environment": ["staging", "production"]
        }
      }
    }
  ]
}
